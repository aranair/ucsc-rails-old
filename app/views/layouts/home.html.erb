<!DOCTYPE html>
<html>
<head>
  <title>UCSC</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <script src="https://maps.googleapis.com/maps/api/js"></script>
</head>
<body>

  <div class="pusher">

    <div class="ui inverted vertical masthead center aligned segment">
      <div class="ui container">
        <div class="ui large secondary inverted pointing menu">
          <a class="active item">Home</a>
          <a class="item">UCSC News</a>
          <a class="item">Coaching Panel</a>

          <div class="ui right dropdown item">
            <%= semantic_icon :sidebar %>
            <div class="menu">
              <a class="item">Login</a>
            </div>
          </div>
        </div>
      </div>

      <div class="ui container">
        <h1 class="ui inverted header">United Condo Squash Club</h1>
        <h2 class="ui inverted header">live and breathe squash</h2>
      </div>

      <%= semantic_icon :chevron_down %>
      <div class="arrow-down"></div>
    </div>

    <%= yield %>

  </div>

</body>
</html>
